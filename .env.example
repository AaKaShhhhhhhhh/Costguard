# Cloud Provider Credentials
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

GCP_PROJECT_ID=your-gcp-project-id
GCP_CREDENTIALS_PATH=/path/to/credentials.json

AZURE_SUBSCRIPTION_ID=your-azure-subscription-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
AZURE_TENANT_ID=your-tenant-id

# LLM API Keys
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Slack
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL_ALERTS=#cost-alerts
SLACK_CHANNEL_APPROVALS=#cost-approvals

# Archestra.AI
ARCHESTRA_API_KEY=your-archestra-key
ARCHESTRA_API_URL=https://api.archestra.ai

# Database
DATABASE_URL=sqlite:///./costguard.db
# DATABASE_URL=postgresql://user:password@localhost/costguard

# Application
ENVIRONMENT=development
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000

# Cost Thresholds (USD)
MONTHLY_BUDGET_LIMIT=50000
DAILY_ALERT_THRESHOLD=2000
AUTO_APPROVAL_LIMIT=500

# Optimization Settings
MIN_QUALITY_THRESHOLD=0.95
CACHE_HIT_TARGET=0.80
ENABLE_AUTO_OPTIMIZATION=true
